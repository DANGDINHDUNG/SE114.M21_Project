<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBF9"
    tools:context=".MainActivity2">

    <Spinner
        android:id="@+id/Period_spinner"
        android:layout_width="257dp"
        android:layout_height="45dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/BarChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rectangle_19" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="520dp"
        android:layout_height="334dp"
        android:layout_marginBottom="468dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/balance_background" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/BarChart"
        android:layout_width="294dp"
        android:layout_height="396dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/back_btn_balance"
        android:layout_width="96dp"
        android:layout_height="43dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BarChart"
        app:srcCompat="@drawable/back_bg" />

    <ImageView
        android:id="@+id/imageView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn_balance"
        app:layout_constraintEnd_toEndOf="@+id/back_btn_balance"
        app:layout_constraintStart_toStartOf="@+id/back_btn_balance"
        app:layout_constraintTop_toTopOf="@+id/back_btn_balance"
        app:srcCompat="@drawable/back_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>