<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBF9"
    tools:context=".Balance_in">

    <ImageView
        android:id="@+id/day_holder_balance"
        android:layout_width="76dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_add"
        app:srcCompat="@drawable/edit_text_background" />

    <ImageView
        android:id="@+id/month_holder_balance"
        android:layout_width="76dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_minus"
        app:srcCompat="@drawable/edit_text_background" />

    <ImageView
        android:id="@+id/year_holder_balance"
        android:layout_width="76dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_minus"
        app:srcCompat="@drawable/edit_text_background" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="520dp"
        android:layout_height="334dp"
        android:layout_marginBottom="468dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/balance_background" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="333dp"
        android:layout_height="245dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14"
        app:srcCompat="@drawable/balance_topholder" />

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView33"
        app:layout_constraintStart_toStartOf="@+id/imageView33"
        app:layout_constraintTop_toTopOf="@+id/imageView33"
        app:layout_constraintVertical_bias="0.404"
        app:srcCompat="@drawable/money_bag" />

    <ImageView
        android:id="@+id/imageView45"
        android:layout_width="160dp"
        android:layout_height="34dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView33"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView34"
        app:layout_constraintTop_toTopOf="@+id/imageView33"
        app:srcCompat="@drawable/current_balance" />

    <TextView
        android:id="@+id/Balance_in_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:textColor="#D300C8C8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView33"
        app:layout_constraintEnd_toEndOf="@+id/imageView33"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toEndOf="@+id/imageView34"
        app:layout_constraintTop_toBottomOf="@+id/imageView45"
        app:layout_constraintVertical_bias="0.135" />

    <ImageView
        android:id="@+id/imageView54"
        android:layout_width="86dp"
        android:layout_height="82dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241"
        app:srcCompat="@drawable/debit_card" />

    <ImageView
        android:id="@+id/imageView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toEndOf="@+id/imageView54"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84"
        app:srcCompat="@drawable/balance" />

    <ImageView
        android:id="@+id/transactions"
        android:layout_width="74dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toEndOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454"
        app:srcCompat="@drawable/history" />

    <ImageView
        android:id="@+id/balance_title"
        android:layout_width="251dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/balance_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView34"
        app:layout_constraintVertical_bias="0.821"
        app:srcCompat="@drawable/edit_text_background" />

    <ImageView
        android:id="@+id/balance_amount"
        android:layout_width="251dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView32"
        app:srcCompat="@drawable/edit_text_background" />

    <ImageView
        android:id="@+id/balance_add"
        android:layout_width="108dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_amount"
        app:srcCompat="@drawable/add_bg" />

    <ImageView
        android:id="@+id/balance_minus"
        android:layout_width="108dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/balance_add"
        app:layout_constraintTop_toBottomOf="@+id/balance_amount"
        app:srcCompat="@drawable/minus_bg" />

    <ImageView
        android:id="@+id/imageView63"
        android:layout_width="36dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/balance_minus"
        app:layout_constraintEnd_toEndOf="@+id/balance_minus"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toEndOf="@+id/balance_add"
        app:layout_constraintTop_toTopOf="@+id/balance_minus"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/minus" />

    <ImageView
        android:id="@+id/imageView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/balance_add"
        app:layout_constraintEnd_toEndOf="@+id/balance_add"
        app:layout_constraintHorizontal_bias="0.772"
        app:layout_constraintStart_toStartOf="@+id/balance_add"
        app:layout_constraintTop_toTopOf="@+id/balance_add"
        app:layout_constraintVertical_bias="0.511"
        app:srcCompat="@drawable/add_1" />

    <ImageView
        android:id="@+id/imageView65"
        android:layout_width="45dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/balance_minus"
        app:layout_constraintEnd_toEndOf="@+id/balance_minus"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="@+id/imageView63"
        app:layout_constraintTop_toTopOf="@+id/balance_minus"
        app:layout_constraintVertical_bias="0.479"
        app:srcCompat="@drawable/minus_1" />

    <ImageView
        android:id="@+id/back_btn_balance"
        android:layout_width="96dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/save_button_balance"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_holder_balance"
        app:srcCompat="@drawable/back_button" />

    <ImageView
        android:id="@+id/save_button_balance"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_holder_balance"
        app:srcCompat="@drawable/save_button" />

    <ImageView
        android:id="@+id/imageView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn_balance"
        app:layout_constraintEnd_toEndOf="@+id/back_btn_balance"
        app:layout_constraintStart_toStartOf="@+id/back_btn_balance"
        app:layout_constraintTop_toTopOf="@+id/back_btn_balance"
        app:srcCompat="@drawable/back_txt" />

    <ImageView
        android:id="@+id/imageView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/save_button_balance"
        app:layout_constraintEnd_toEndOf="@+id/save_button_balance"
        app:layout_constraintStart_toStartOf="@+id/save_button_balance"
        app:layout_constraintTop_toTopOf="@+id/save_button_balance"
        app:srcCompat="@drawable/save" />

    <EditText
        android:id="@+id/title_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/balance_title"
        app:layout_constraintEnd_toEndOf="@+id/balance_title"
        app:layout_constraintStart_toStartOf="@+id/balance_title"
        app:layout_constraintTop_toTopOf="@+id/balance_title" />

    <EditText
        android:id="@+id/amount_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/balance_amount"
        app:layout_constraintEnd_toEndOf="@+id/balance_amount"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/balance_amount"
        app:layout_constraintTop_toBottomOf="@+id/balance_title"
        app:layout_constraintVertical_bias="0.631" />

    <EditText
        android:id="@+id/Day_Balance"
        android:layout_width="56dp"
        android:layout_height="31dp"
        android:background="@null"
        android:ems="10"
        android:hint="Day"
        android:inputType="numberSigned"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/day_holder_balance"
        app:layout_constraintEnd_toEndOf="@+id/day_holder_balance"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/day_holder_balance"
        app:layout_constraintTop_toTopOf="@+id/day_holder_balance" />

    <EditText
        android:id="@+id/Month_Balance"
        android:layout_width="56dp"
        android:layout_height="31dp"
        android:background="@null"
        android:ems="10"
        android:hint="Month"
        android:inputType="numberSigned"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/month_holder_balance"
        app:layout_constraintEnd_toEndOf="@+id/month_holder_balance"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@+id/month_holder_balance"
        app:layout_constraintTop_toTopOf="@+id/month_holder_balance" />

    <EditText
        android:id="@+id/Year_Balance"
        android:layout_width="56dp"
        android:layout_height="31dp"
        android:background="@null"
        android:ems="10"
        android:hint="Year"
        android:inputType="numberSigned"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/year_holder_balance"
        app:layout_constraintEnd_toEndOf="@+id/year_holder_balance"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/year_holder_balance"
        app:layout_constraintTop_toTopOf="@+id/year_holder_balance" />

    <TextView
        android:id="@+id/Show_Expenses_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:text="Transactions"
        android:textColor="#FDFDFD"
        app:layout_constraintBottom_toTopOf="@+id/imageView45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactions"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView85"
        android:layout_width="40dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="@+id/balance_add"
        app:layout_constraintEnd_toStartOf="@+id/imageView64"
        app:layout_constraintStart_toStartOf="@+id/balance_add"
        app:layout_constraintTop_toTopOf="@+id/balance_add"
        app:srcCompat="@drawable/add" />

</androidx.constraintlayout.widget.ConstraintLayout>